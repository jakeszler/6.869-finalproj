#include <Utils/inc/UtilsForXfOpenCV.h>
#include "xfEqualizeHistCoreForVivadoHLS.h"
  

namespace xF {  

	void equalizeHist(cv::Mat &src, cv::Mat &dst)
	{ 	
		const int srcTypeTP = ${srcTypeCMakeParamEqualizeHist}; 
		const int maxWidthTP = ${maxWidthCMakeParamEqualizeHist};
		const int maxHeightTP = ${maxHeightCMakeParamEqualizeHist};
		const int NPCTP = ${NPCCMakeParamEqualizeHist};
	
		//check for limitations of xfOpenCV module
		//run-time
		assert(src.channels() == 1);
		assert(dst.channels() == 1); 
	
		xf::Mat<srcTypeTP, maxHeightTP, maxWidthTP, NPCTP>* imgInput;
		xf::Mat<srcTypeTP, maxHeightTP, maxWidthTP, NPCTP>* imgInput1;
		xf::Mat<srcTypeTP, maxHeightTP, maxWidthTP, NPCTP>* imgOutput;

		// perform some checks on the src type
		cvToXfSource(src, imgInput);	
		cvToXfSource(src, imgInput1);
		        
		// perform some checks on the dst type
		bool dstPostConversion = cvToXfDestination(dst, imgOutput, src);  
	
		// call xf::equalizeHist
		xF_equalizeHist(imgInput, imgInput1, imgOutput);

		//perform checks on the dst type
		if (dstPostConversion) {
			xfMatDepthPostConversion(dst,imgOutput);
		}
	
		delete imgInput;	
		delete imgInput1;
		delete imgOutput;
		 
	}
}

