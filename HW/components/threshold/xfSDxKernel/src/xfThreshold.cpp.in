#include <Utils/inc/UtilsForXfOpenCV.h>

#include "xfThresholdCoreForVivadoHLS.h"

namespace xF { 
 
double threshold(cv::Mat &src, cv::Mat &dst, double thresh, double maxval, int type)
{
	const int thresholdTypeTP = ${thresholdTypeCMakeParamThreshold};
	const int maxWidthTP  = ${maxWidthCMakeParamThreshold};
	const int maxHeightTP = ${maxHeightCMakeParamThreshold};
	const int srcTypeTP = ${srcTypeCMakeParamThreshold}; 
	const int NPCTP = ${NPCCMakeParamThreshold};
	
	//check for limitations of xfOpenCV module
	assert(src.channels() == 1);
	assert(dst.channels() == 1);
	assert((maxval >= 0) && maxval <= 255);
	assert(type==XF_XFTHRESHOLDTYPE2CVTHRESHOLDTYPE(thresholdTypeTP));
	
	xf::Mat<srcTypeTP, maxHeightTP, maxWidthTP, NPCTP>* imgInput;
	xf::Mat<srcTypeTP, maxHeightTP, maxWidthTP, NPCTP>* imgOutput;

	// perform some checks on the src type
	cvToXfSource(src, imgInput);
          
	// perform some checks on the dst type
	bool dstPostConversion = cvToXfDestination(dst, imgOutput, src); 
	
	// call xf::threshold
	xF_Threshold(imgInput, imgOutput, (short) thresh, (short) maxval);

	//perform checks on the dst type
	if (dstPostConversion) {
		xfMatDepthPostConversion(dst,imgOutput);
	}
	
	delete imgInput;
	delete imgOutput;
	
	return thresh;	
}
}
